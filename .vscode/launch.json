{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome con Live Server",
            "url": "http://127.0.0.1:5500/",
            "webRoot": "${workspaceFolder}",
            "runtimeArgs": [
                "--new-tab"
            ]
        }
    ]
}